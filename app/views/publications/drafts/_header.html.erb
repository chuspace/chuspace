<flexible-header data-enabled='true'>
  <header data-target='flexible-header.element' class='header fixed z-50 bg-base-100 h-14 w-full'>
    <nav class='container flex justify-between items-center w-full h-full'>
      <%= link_to root_path do %>
        <h1 class='font-bold text-3xl lowercase inline-block font-monospace'>Chu</h1>
      <% end %>

      <div class='flex items-center flex-1 w-1/2'>
        <div class='divider divider-vertical'></div>
        <div class='ml-8 flex overflow-x-auto'>
          <%= render 'shared/breadcrumbs' %>
        </div>
      </div>

      <div class='flex items-center'>
        <%= turbo_frame_tag dom_id(@draft, :actions), class: 'flex items-center' do %>
          <%= render 'publications/drafts/actions', draft: @draft, publication: @publication if @draft.persisted? %>
        <% end %>
        <%= render 'layouts/user' %>
      </div>
    </nav>
  </header>
</flexible-header>
