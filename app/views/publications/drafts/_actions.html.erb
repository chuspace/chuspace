<%= turbo_frame_tag dom_id(draft, :actions), class: 'flex items-center' do %>
  <%= content_tag :div, draft.status, id: 'chu-editor-status', class: 'text-xs mr-4' %>

  <%= turbo_frame_tag(dom_id(@draft, :new_commit)) do %>
    <%= link_to 'Commit', publication_new_commit_draft_path(publication, draft), class: 'btn btn-primary btn-xs mr-4' if allowed_to?(:commit?, draft) %>
  <% end %>

  <%= turbo_frame_tag(dom_id(@draft, :new_publish)) do %>
    <%= link_to 'Publish', publication_new_publish_draft_path(publication, draft), class: 'btn btn-accent btn-xs mr-4' if allowed_to?(:publish?, draft) %>
  <% end %>
<% end %>
