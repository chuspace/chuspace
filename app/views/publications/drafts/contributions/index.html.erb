<div class='sm:w-2/3 mx-auto w-full'>
  <%= render 'shared/breadcrumbs' %>

  <chu-editor
    username='<%= Current.user.username %>'
    imageProviderPath='<%= publication_assets_path(@publication) %>'
    contribution
    contributionPath='<%= publication_new_draft_contribution_path(@publication) %>'
  >
    <section class="container flex-1">
      <%= turbo_frame_tag(@draft) do %>
        <%= simple_form_for @draft, url: publication_update_draft_path(@publication, @draft), html: { 'data-turbo-frame': '_top' } do |form| %>
          <div class='mt-8' spellcheck="false" data-text='content'>
            <%= form.input(
                :body,
                as: :text,
                label: false,
                wrapper: false,
                input_html: { class: 'hidden content', value: @draft.decoded_content  }
              )
            %>
          </div>
        <% end %>
      <% end %>
    </section>
  </chu-editor>
</div>

<%= turbo_frame_tag :contribution_popup %>
