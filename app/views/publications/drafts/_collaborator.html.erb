<%= turbo_frame_tag(member) do %>
  <%= link_to user_path(member.user), title: member.user.name do %>
    <div class='border-neutral border-2 rounded-full relative'>
      <%= image_tag member.user.avatar_url, class: "cursor-pointer mask mask-circle" %>
      <span class='absolute top-0 right-0 -mt-1 <%= member.online ? 'bg-success' : 'bg-secondary' %> w-3 h-3 rounded-full ml-2'></span>
    </div>
  <% end %>
<% end %>
