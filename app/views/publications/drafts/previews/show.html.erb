<%= render 'publications/drafts/shared/preview' %>

<div class='fixed bottom-0 border-t left-0 py-4 border-base-200 bg-base-200 w-full'>
  <div class='flex items-center justify-between container'>
    <div class='flex-1 flex items-center'>
      <% if  @publication.icon.attached? %>
        <%= image_tag(@publication.icon.variant(:icon), class: 'mask mask-circle') %>
      <% else %>
        <div class="avatar placeholder">
          <div class="bg-neutral-focus text-neutral-content rounded-full w-6 h-6">
            <span><%= @publication.name.first(2).upcase %></span>
          </div>
        </div>
      <% end %>

      <h4 class='ml-2'><%= @publication.name %></h4>
      <%= link_to 'Subscribe', '#', class: 'btn btn-primary btn-outline btn-xs ml-2' %>
    </div>

    <nav class='flex items-center'>
      <%= render 'posts/reactions/list' %>
      <%= render 'posts/sharings/list' %>
    </nav>
  </div>
</div>
