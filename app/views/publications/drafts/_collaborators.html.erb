<div class='sm:fixed sm:inset-y-1/2 sm:ml-4 mt-24 sm:mt-0'>
  <% members.each do |member| %>
    <div class='flex items-center first:mt-0 mt-2'>
      <div class='border-neutral border-2 rounded-full'>
        <%= image_tag member.user.avatar_url, class: "cursor-pointer mask mask-circle" %>
      </div>
      <span class='bg-success w-3 h-3 rounded-full ml-2'></span>
    </div>
  <% end %>
</div>
