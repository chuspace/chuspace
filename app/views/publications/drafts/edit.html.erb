<div class='lg:w-2/3 mx-auto w-full chu-editor editable'>
  <chu-editor
      imageProviderPath='<%= publication_assets_path(@publication) %>'
      autoSavePath='<%= publication_autosave_draft_path(@publication, @draft) %>'
      ydocTemplate='<%= @draft.content_ydoc %>'
      collabId='<%= Current.user.id %>'
      channelId='<%= @draft.collab_key %>'
      user='<%= Current.user.collab_attributes.to_json %>'
      <%= @draft.collab? ? 'collab' : '' %>
      <%= @draft.front_matter? ? '' : 'excludeFrontmatter' %>
    >
    <%= turbo_frame_tag(@draft) do %>
      <%= simple_form_for @draft, url: publication_update_draft_path(@publication, @draft), html: { 'data-turbo-frame': '_top' } do |form| %>
        <div class='mt-8' spellcheck="false" data-text='content'>
          <%= form.input(
              :body,
              as: :text,
              label: false,
              wrapper: false,
              input_html: { class: 'hidden content', value: @draft.decoded_content  }
            )
          %>
        </div>
      <% end %>
    <% end %>
  </chu-editor>
</div>
