<%= render 'publications/layout' do %>
  <div class="text-sm breadcrumbs">
    <ul>
      <li>
        <a><%= link_to @publication.repo.fullname, publication_draft_path(@publication, path: @publication.repo.posts_folder) %></a>
      </li>
      <li>
        <a><%= @path %></a>
      </li>
    </ul>
  </div>

  <%= turbo_frame_tag dom_id(@publication, :drafts), src: publication_draft_path(@publication, path: @path), lazy: true do %>
    Loading
  <% end %>
<% end %>
