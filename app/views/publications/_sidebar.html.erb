<aside>
  <%= render(Card::Component.new) do |card| %>
    <% card.title do %>
      People
    <% end %>

    <% card.actions do %>
      <%= link_to 'Invite', new_publication_invite_path(publication), class: 'btn btn-outline btn-primary btn-sm', 'data-turbo-frame': dom_id(@invite, :popup) %>
      <%= turbo_frame_tag dom_id(@invite, :popup) %>
    <% end %>

    <% card.body do %>
      <div class='flex items-center mt-4 px-8 pb-8'>
        <% publication.members.each do |member| %>
          <%= image_tag member.avatar_url, class: 'w-8 h-8 ml-2 first:ml-0 mask mask-circle'%>
        <% end %>
      </div>
    <% end %>
  <% end %>
</aside>
