<%= render 'publications/layout' do %>
  <div class='grid grid-cols-4 gap-16 mt-8'>
    <%= render 'sidebar', publication: @publication %>

    <section class='col-span-3'>
      <%= render(Card::Component.new) do |card| %>
        <% card.title do %>
          <%= render('shared/breadcrumbs') %>
        <% end %>

        <% card.body do %>
          <div class='py-4'>
            <%= render "#{@partial}", publication: @publication, url: publication_setting_path(@publication, id: @partial.parameterize) %>
          </div>
        <% end %>
      <% end %>
    </section>
  </div>
<% end %>
