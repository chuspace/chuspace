<div class='flex items-center w-full'>
  <%= render(Avatar::Component.new(avatar: @publication.icon, fallback: @publication.initials, variant: :thumb)) %>
  <div class='ml-4 w-2/3'>
    <h2><%= @publication.name %></h2>
    <p class='sm:w-2/3 w-full text-secondary'><%= @publication.description %></p>
  </div>
</div>

<div class='tabs border-b border-base-200 my-12' dir='horizontal'>
  <%= tab_link_to 'Overview', publication_path(@publication), class: 'tab' %>
  <%= tab_link_to 'Drafts', publication_drafts_root_path(@publication), class: 'tab' %>
  <%= tab_link_to 'Assets', publication_assets_root_path(@publication), class: 'tab' %>
  <%= tab_link_to 'People', publication_people_path(@publication), class: 'tab' %>
  <%= tab_link_to 'Settings', publication_settings_path(@publication), class: 'tab', active_condition: :inclusive %>
</div>

<%= yield %>
