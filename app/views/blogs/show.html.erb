<div class='relative'>
  <h3><%= @blog.name %></h3>
  <p class='sm:w-2/3 w-full text-secondary'><%= @blog.description %></p>
  <%= link_to 'New post', new_user_blog_post_path(@blog.owner, @blog), class: 'btn btn-primary btn-outline btn-sm absolute right-0' %>

  <div class='tabs mt-8'>
    <div role="tablist">
      <%= link_to 'About', user_blog_path(@blog.owner, @blog), type: 'button', role: 'tab', 'aria-selected': 'true', class: 'tab' %>
      <%= link_to 'Posts', user_blog_path(@blog.owner, @blog, tab: :posts), type: 'button', role: 'tab', 'aria-selected': 'false', class: 'tab' %>
      <%= link_to 'Settings', user_blog_settings_path(@blog.owner, @blog), type: 'button', role: 'tab', 'aria-selected': 'false', class: 'tab' %>
    </div>
  </div>

  <div class='divider'></div>

  <div class='mt-8'>
    <%= render @partial, blog: @blog %>
  </div>
</div>
