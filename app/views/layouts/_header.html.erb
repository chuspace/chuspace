<header>
  <nav class='container flex justify-between items-center py-2'>
    <%= link_to root_path do %>
      <h1 class='font-bold text-4xl lowercase inline-block font-monospace'>Chuspace</h1>
      <%= content_tag :span, 'axiom', class: "text-sm font-sans" %>
    <% end %>

    <div class='flex items-center'>
      <%= link_to 'Feed', '#', class: 'link link--default' %>
      <%= link_to 'How it works?', '#', class: 'link link--default ml-8' %>
    </div>

    <% if Current.user.present?  %>
      <%= render "layouts/user" %>
    <% end %>
  </nav>
</header>
