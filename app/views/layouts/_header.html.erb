<header>
  <nav class='container flex justify-between items-center py-2'>
    <%= link_to root_path do %>
      <h1 class='font-bold text-2xl inline-block'>Chuspace</h1>
      <%= content_tag :span, 'axiom', class: "text-sm" %>
    <% end %>

    <% if Current.user.present?  %>
      <%= render "layouts/user" %>
    <% else %>
      <div class='flex items-center'>
        <%= button_to 'Sign in github', '/auth/github', class: 'button button--fill', 'data-turbo': false %>
      </div>
    <% end %>
  </nav>
</header>
