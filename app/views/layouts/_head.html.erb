<head>
  <%= render 'layouts/meta' %>
  <%= display_meta_tags(
    site: ChuspaceConfig.new.app[:name],
    title: 'Blogging platform for programmers and teams',
    description: 'Collaborative blogging platform for programmers and teams',
    icon: asset_cdn_url('favicon.png'),
    og: {
      title: :title,
      site_name: :site,
      description: :description
    }
  )
  %>

  <% if signed_in? %>
    <link rel="dns-prefetch" href="//secure.gravatar.com" />
    <link rel="preconnect" href="//secure.gravatar.com" />
    <link rel="dns-prefetch" href="//images.gravatar.com" />
    <link rel="preconnect" href="//images.chuspace.com" />
    <link rel="dns-prefetch" href="//avatars.gravatar.com" />
    <link rel="preconnect" href="//avatars.chuspace.com" />
  <% end %>

  <link rel="icon" type="image/png" href="<%= asset_cdn_url('favicon.png') %>" />
  <link rel="apple-touch-icon" href="<%= asset_cdn_url('chuspace-icon-192.png') %>" />
  <link rel="apple-touch-icon" sizes="152x152" href="<%= asset_cdn_url('chuspace-icon-192.png') %>" />
  <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_cdn_url('chuspace-icon-192.png') %>" />
  <link rel="apple-touch-icon" sizes="167x167" href="<%= asset_cdn_url('chuspace-icon-192.png') %>" />

  <%= javascript_pack_tag 'application', defer: true, 'data-turbo-track': 'reload' %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
</head>
