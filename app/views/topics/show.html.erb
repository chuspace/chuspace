<section class='grid sm:grid-cols-12 grid-cols-1 sm:gap-16 gap-8'>
  <div class='sm:col-span-8 col-span-1'>
    <%= render(Card::Component.new) do |card| %>
      <% card.title do %>
        <%= t('.heading', name: @topic.name) %>
      <% end %>

      <% card.body do %>
        <% if @posts.any? %>
          <%= render 'posts/list', posts: @posts %>
        <% else %>
          <%= render Placeholder::Component.new do |placeholder| %>
            <%= placeholder.text do %>
              <%= simple_format t('posts.list.none') %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class='sm:col-span-4 col-span-1 order-first sm:order-2'>
    <%= render(Card::Component.new) do |card| %>
      <% card.title do %>
        Topic
      <% end %>

      <% card.body do %>
        <div class='p-4'>
          <%= render(Avatar::Component.new(avatar: @topic.icon, fallback: '#', variant: :thumb)) %>
          <h5><%= @topic.display_name || @topic.name %></h5>
          <p class='text-secondary mt-1'><%= @topic.short_description %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
