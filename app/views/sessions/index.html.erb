<main class='min-h-full sm:flex items-center justify-center flex-col'>
  <h2><%= t('.welcome') %></h2>
  <p class='mt-4 text-secondary'><%= t('.intro') %></p>
  <div class='card shadow-2xl bg-neutral w-1/3 mt-8'>
    <div class='card-body'>
      <h6 class='card-title font-normal text-neutral-content'><%= t('.login_card_title') %></h6>
      <p class='text-sm'></p>
      <%= render 'shared/identities' %>
      <%= button_or_link_to(email_sessions_path, title: t('shared.identities.login_with', provider: 'Email'), class: "text-left mt-2 first:mt-0 w-full btn border-0 #{login_button_colors_classes[:email].join(' ')}", data: { turbo: false }, form: { class: 'w-full mt-2 first:mt-0' }) do %>
        <%= inline_svg_tag 'icons/email', class: 'fill-current w-6 h-6' %><span class='ml-2'>Email</span>
      <% end %>
    </div>
  </div>

  <div class='mt-8'>
    <%= link_to 'Sign up â†’', signups_path, title: t('shared.signup_prompt'), class: 'link link-primary' %>
  </div>
</main>
