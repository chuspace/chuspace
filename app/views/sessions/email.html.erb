<main class='min-h-full sm:flex items-center justify-center flex-col'>
  <h2><%= t('.welcome') %></h2>
  <p class='mt-4 text-secondary'><%= t('.intro') %></p>
  <div class='w-1/3 mt-8'>
    <%= simple_form_for :session, url: sessions_path do |form| %>
      <%= form.input :email %>
      <%= form.button :submit, 'Click to recieve magic link', title: 'Click to receive magic link', class: 'btn btn-primary mt-4' %>
    <% end %>

    <div class='mt-8'>
      <%= link_to 'Other login options →', sessions_path, title: t('shared.login_prompt'), class: 'link link-primary block mt-3' %>
      <%= link_to 'Signup →', signups_path, title: t('shared.signup_prompt'), class: 'link link-primary block mt-3' %>
    </div>
  </div>
</main>
