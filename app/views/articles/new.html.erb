<div class='mt-8 sm:flex block items-center justify-center flex-col'>
  <div class='sm:w-2/3 w-full'>
    <%= render 'header', blog: @blog, article: @article %>
    <div class='mt-8 prose lg:prose-xl mx-auto'>
      <code-editor mode='yaml-frontmatter' content='<%= @article.frontmatter %>'></code-editor>
      <chu-editor
        class='block mt-8'
        data-gramm="false">
        <%= simple_form_for(:article, url: blog_articles_path(@blog, @article)) do |form| %>
          <%= form.input :content, as: :text, label: false, wrapper: false, input_html: { class: 'hidden' } %>
        <% end %>
      </chu-editor>
    </div>
  </div>
</div>
