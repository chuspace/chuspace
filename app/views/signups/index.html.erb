<main class='grid sm:grid-cols-3 grid-cols-1 sm:gap-16 gap-8 mt-32'>
  <div class='sm:col-span-2 col-span-1'>
    <h1 class='text-3xl md:text-4xl font-bold'><%= t('.welcome') %></h1>
    <p class='mt-2 text-secondary w-2/3'><%= t('shared.pitch') %></p>
    <ul class='mt-8 w-full'>
      <%= render 'shared/features' %>
    </ul>
  </div>

  <div class='col-span-1'>
    <div class='card shadow-xl bg-base-300'>
      <div class='card-body'>
        <h3 class='card-title font-normal text-base'><%= t('.cta') %>:</h3>
        <div class='mt-2'>
          <%= render 'shared/identities' %>
          <%= link_to(email_signups_path, title: t('shared.identities.login_with', provider: 'Email'), class: "text-left mt-2 first:mt-0 w-full btn border-0 #{login_button_colors_classes[:email].join(' ')}") do %>
            <%= inline_svg_tag 'icons/email.svg', class: 'fill-current w-6 h-6' %><span class='ml-2'>Email</span>
          <% end %>
        </div>
      </div>
    </div>

    <div class='mt-4 text-center'>
      <%= link_to 'Log in â†’', sessions_path, title: t('shared.login_prompt'), class: 'link link-primary' %>
    </div>
  </div>
</main>
