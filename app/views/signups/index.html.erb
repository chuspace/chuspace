<main class='min-h-full block sm:flex items-center justify-between'>
  <div class='sm:w-2/3 w-full'>
    <h2><%= t('.welcome') %></h2>
    <p class='mt-4 text-secondary'><%= t('.intro') %></p>
    <div class='mt-8 sm:w-2/3 w-full'>
      <ul class=''>
        <% t('.features').each do |feature| %>
          <li class='mt-6'>
            <div class='flex items-center'>
              <span class='text-primary'>
                <%= inline_svg_tag 'icons/check', class: 'w-6 h-6 fill-current' %>
              </span>
              <h4 class='ml-4'><%= feature[:title] %></h4>
            </div>
            <p class='text-secondary mt-1 ml-10'><%= feature[:description] %></p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class='sm:w-1/3 w-full'>
    <div class='card shadow-xl bg-base-200'>
      <div class='card-body'>
        <h3 class='card-title font-normal text-lg'>
          <%= t('.cta') %>:
        </h3>

        <%= render 'shared/identities' %>
        <%= button_or_link_to(email_signups_path, title: t('shared.identities.login_with', provider: 'Email'), class: "text-left mt-2 first:mt-0 w-full btn border-0 #{login_button_colors_classes[:email].join(' ')}", data: { turbo: false }, form: { class: 'w-full mt-2 first:mt-0' }) do %>
          <%= inline_svg_tag 'icons/email', class: 'fill-current w-6 h-6' %><span class='ml-2'>Email</span>
        <% end %>
      </div>
    </div>

    <div class='mt-8 text-center'>
      <%= link_to 'Log in â†’', sessions_path, title: t('shared.login_prompt'), class: 'link link-primary' %>
    </div>
  </div>
</main>
