<% if signed_in? %>
  <section class='flex justify-between'>
    <main class='sm:w-2/3 w-full mr-12'>
      <%= render 'posts/list', posts: @posts %>
    </main>

    <aside class='sm:w-1/3 w-full'>
      <div class='card bordered'>
        <h5 class='px-4 pt-8'>Top blogs</h5>
        <%= render partial: 'blogs/mini_item', collection: Blog.all.except_personal, as: :blog, cached: true %>
      </div>
    </aside>
  </section>
<% else %>
  <main class='min-h-full block sm:flex items-center justify-between'>
    <%= render 'marketing' %>
  </main>
<% end %>
