<flexible-header data-enabled='<%= @post.persisted? %>'>
  <header data-target='flexible-header.element' class='header'>
    <nav class='container flex justify-between items-center py-2'>
      <%= link_to root_path do %>
        <h1 class='font-bold text-3xl lowercase inline-block font-monospace'>Chu</h1>
      <% end %>

      <div class='flex items-center flex-1'>
        <div class='divider divider-vertical'></div>
        <% if @post.persisted? %>
          <%= render 'posts/breadcrumbs', post: @post %>
        <% else %>
          <label class='text-secondary'>New Post</label>
        <% end %>
      </div>

      <div class='flex items-center'>
        <%= render 'posts/actions' if @post.persisted? %>
        <%= render 'layouts/user' %>
      </div>
    </nav>
  </header>
</flexible-header>
