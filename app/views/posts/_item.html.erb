<% cache post do %>
  <article class='border-b last:border-b-0 border-base-200 p-4'>
    <%= turbo_frame_tag(post, class: 'flex') do %>
      <div class='flex-1'>
        <%= link_to publication_post_path(post.publication, post), data: { 'turbo-frame': :_top } do %>
          <%= tag.h5 post.title, class: 'link link-primary link-hover mt-1' %>
          <%= tag.p post.summary, class: 'text-sm text-secondary mt-1 sm:w-2/3 w-full' %>
        <% end %>

        <div class='mt-4'>
          <%= tag.span post.visibility, class: 'badge badge-primary mr-2 mt-2' %>
          <%= tag.time post.date.strftime("%d %b %Y"), class: 'text-sm text-secondary' %>
        </div>
      </div>
    <% end %>
  </article>
<% end %>
