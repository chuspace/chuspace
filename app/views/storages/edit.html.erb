<%= render 'layout' do %>
  <div class='pb-4 flex items-center'>
    <%= inline_svg_tag("icons/#{@storage.provider}", class: 'fill-current mr-2 w-8 h-8') %>
    <%= tag.h3 @storage.provider.humanize %>
  </div>

  <%= turbo_frame_tag(@storage) do %>
    <%= render('storages/form', storage: @storage) %>
  <% end %>
<% end %>
