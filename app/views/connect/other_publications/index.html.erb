<%= render 'layout' do %>
  <div class="grid grid-cols-3 gap-4 my-8 w-full">
    <%= link_to t('connect.publications.shared.tabs.provider'), connect_other_publications_path, class: "tab tab-bordered tab-active" %>
    <a class="tab tab-bordered"><%= t('connect.publications.shared.tabs.repository') %></a>
    <a class="tab tab-bordered "><%= t('connect.publications.shared.tabs.publication') %></a>
  </div>

  <h4><%= t('connect.publications.shared.tabs.provider') %></h4>
  <div class='text-secondary text-sm'>
    <p>
      Choose the Git provider where your other publication soure code is hosted.
    </p>
  </div>

  <section class='my-8'>
    <ul class='card bordered bg-base-200'>
      <%= render(
          partial: 'connect/shared/choose_git_provider',
          collection: @git_providers,
          as: :git_provider,
          locals: { publication: @publication }
        )
      %>
    </ul>
  </section>
<% end %>
