<%= render(Avatar::Component.new(avatar: user.avatar, gravatar: user.gravatar_url(variant: :profile), fallback: user.name.initials, variant: :profile)) %>
<h3 class='mt-4 leading-none'><%= user.name %></h3>
<h6 class='text-secondary'><%= user.username %></h6>

<ul class='mt-8'>
  <li class='mt-4 first:mt-0'>
    <%= tab_link_to('Overview', user_path(user), class: 'link link-hover text-sm text-secondary font-medium') %>
  </li>
  <li class='mt-4 first:mt-0'>
    <%= tab_link_to('Drafts', user_drafts_path(user), class: 'link link-hover text-sm text-secondary font-medium') %>
  </li>
  <% UserTab::PAGES.each do |page| %>
    <li class='mt-4 first:mt-0'>
      <%= tab_link_to(page.humanize, user_tab_path(user, id: page), class: 'link link-hover text-sm text-secondary font-medium') %>
    </li>
  <% end %>
  <li class='mt-4 first:mt-0'>
    <%= tab_link_to('Settings', setting_path(id: UserSetting::DEFAULT_PAGE), class: 'link link-hover text-sm text-secondary font-medium') %>
  </li>
</ul>
