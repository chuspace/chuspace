<%= turbo_frame_tag dom_id(user, :drafts) do %>
  <% if drafts.any? %>
    <%= render partial: 'publications/drafts/item', collection: drafts, locals: { publication: user.personal_publication }, as: :draft %>
  <% else %>
    <%= render Placeholder::Component.new do |placeholder| %>
      <%= placeholder.text do %>
        <%= simple_format t('drafts.list.none') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
