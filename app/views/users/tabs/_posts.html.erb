<%= render(Card::Component.new) do |card| %>
  <% card.title do %>
    <%= defined?(title) ? title : render('shared/breadcrumbs') %>
  <% end %>

  <% card.actions do %>
    <%= link_to 'New', publication_new_draft_path(@user.personal_publication), class: 'btn btn-primary btn-sm' if @user.personal_publication %>
  <% end %>

  <% card.body do %>
    <% if user.personal_publication&.posts&.any? %>
      <%= render 'posts/list', posts: user.personal_publication.posts %>
    <% else %>
      <%= render 'shared/placeholder', content: 'No published posts' %>
    <% end %>
  <% end %>
<% end %>
