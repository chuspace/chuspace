<%= render(Card::Component.new) do |card| %>
  <% card.title do %>
    <%= render 'shared/breadcrumbs' %>
  <% end %>

  <% card.actions do %>
    <%= link_to 'Connect', connect_other_publications_path, class: 'btn btn-primary btn-sm' %>
  <% end %>

  <% card.body do %>
    <% if @user.publications.except_personal.any? %>
      <%= render 'publications/list', publications: @user.publications.except_personal %>
    <% else %>
      <div class='text-center py-8'>
        <div class='text-secondary w-2/3 mx-auto'>
          <p>Org publications not connected</p>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
