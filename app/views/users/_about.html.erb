<%= render(Card::Component.new) do |card| %>
  <% card.title do %>
    <%= t('.title') %>
  <% end %>

  <% card.actions do %>
    <% if allowed_to?(:edit?, @user) %>
      <% if @user.personal_publication.present? %>
        <%= link_to publication_edit_draft_path(@user.personal_publication, path: @user.personal_publication.repository.readme_path) do %>
          <%= inline_svg_tag 'icons/pencil.svg', class: 'fill-current w-3 h-3' %>
        <% end %>
      <% else %>
        <%= link_to connect_personal_publications_path, title: t('shared.publications.connect_personal') do %>
          <%= inline_svg_tag 'icons/plug.svg', class: 'fill-current w-4 h-4' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <% card.body do %>
    <% if @user.personal_publication.present? %>
      <%= content_tag :article, @user.personal_publication.readme_html.html_safe, class: 'chu-editor chu-editor-sm pt-4 w-full sm:w-4/5' %>
    <% else %>
      <%= render Placeholder::Component.new do |placeholder| %>
        <%= placeholder.text do %>
          <%= tag.p allowed_to?(:edit?, @user) ? t('.placeholder') : t('.no_readme') %>
        <% end %>

        <%= placeholder.cta do %>
          <%= link_to t('shared.publications.connect_personal'), connect_personal_publications_path, class: 'btn btn-primary btn-sm ml-2', title: t('shared.publications.connect_personal') if allowed_to?(:edit?, @user) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
