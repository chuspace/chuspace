<%= simple_form_for(user, url: user_setting_path(user, id: :profile)) do |form| %>

  <file-attachment input="user_avatar">
    <%= form.input :avatar, input_html: { multiple: true } %>
    <pre></pre>
  </file-attachment>
  <%= form.input :name %>
  <%= form.input :username %>
  <%= form.input :email %>
  <%= form.button :submit, 'Save', class: 'mt-8 btn btn-primary' %>
<% end %>
