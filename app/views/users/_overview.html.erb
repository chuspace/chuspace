<% if @user.personal_blog.present? %>
  <div class='card bordered'>

    <div class='chu-editor card-body'>
      <div class='card-title'>
        <code>Readme.md</code>
      </div>

      <%= @user.personal_blog.parsed_readme&.html&.html_safe %>
    </div>
  </div>

  <div class='mt-8'>
    <%= render 'posts/list', posts: @user.posts %>
  </div>

<% else %>
  <div class='text-center py-16'>
    <h3 class='text-secondary'>404</h3>
    <p class='text-secondary w-3/4 mt-4 mx-auto'>
      Your profile about section is sourced from Readme.md file in your personal blog
      repository. Connect or create a new personal blog to get started
    </p>

    <div class='mt-8'>
      <%= link_to 'Setup personal blog', connect_blog_path, class: 'btn btn-primary btn-sm ml-2' %>
    </div>
  </div>
<% end %>
