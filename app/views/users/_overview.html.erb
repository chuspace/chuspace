<% if @user.personal_publication.present? %>
  <div class='card bordered'>
    <div class='card-body'>
      <div class='card-title'>About</div>
      <%= content_tag :article, @user.personal_publication.readme, class: 'chu-editor chu-editor-sm' %>
    </div>
  </div>

  <div class='mt-8'>
    <%= render 'posts/list', posts: @user.posts %>
  </div>

<% else %>
  <div class='text-center py-16'>
    <h3 class='text-secondary'>404</h3>
    <p class='text-secondary w-3/4 mt-4 mx-auto'>
      Your profile about section is sourced from Readme.md file in your personal publication
      repository. Connect or create a new personal publication to get started
    </p>

    <div class='mt-8'>
      <%= link_to 'Setup personal publication', connect_personal_publications_path, class: 'btn btn-primary btn-sm ml-2' %>
    </div>
  </div>
<% end %>
