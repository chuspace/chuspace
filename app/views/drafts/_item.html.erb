<% cache draft do %>
  <article class='border-b last:border-b-0 border-base-200 p-4'>
    <%= turbo_frame_tag(draft, class: 'flex') do %>
      <div class='flex-1'>
        <%= link_to edit_blog_draft_path(draft.blog, draft), data: { 'turbo-frame': :_top } do %>
          <%= tag.h5 draft.parsed.title, class: 'link link-primary link-hover mt-1' %>
          <%= tag.p draft.parsed.summary, class: 'text-sm text-secondary mt-1 sm:w-2/3 w-full' %>
        <% end %>
      </div>
    <% end %>
  </article>
<% end %>
